<h1>Attractions#show</h1>
<p>Find me in app/views/attractions/show.html.erb</p>

<h2>attraction information:</h2>
<p>
name: <%= @attraction.name %><br>
tickets: <%= @attraction.tickets %><br>
nausea_rating: <%= @attraction.nausea_rating %><br>
happiness_rating: <%= @attraction.happiness_rating %><br>
min_height: <%= @attraction.min_height %><br>
</p>
<%= form_for @ride do |f| %>
   <%= f.hidden_field :user_id, value: current_user.id %>
   <%= f.hidden_field :attraction_id, value: @attraction.id %>
   <%= f.submit "Go on this ride"%>
<% end unless current_user.admin %>
<% if current_user.admin %>
   <%= link_to  "Edit Attraction", edit_attraction_path(@attraction) %>
<% end %>